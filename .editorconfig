root = true

[*]
charset = utf-8
max_line_length = unset

# .git/config
[config]
indent_size = 8
indent_style = tab
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true

[*.json{,.j2}]
indent_size = 2

[*.md]
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{ps1,psm1,psd1}]
charset = utf-8-bom
# PowerShell ISE のインデント幅に合わせた
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{*.sh,*.sh.j2,*.bash,*.bats}]
# https://google.github.io/styleguide/shell.xml#Formatting
# > Indent 2 spaces. No tabs.
indent_size = 2
indent_style = space

end_of_line = lf
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
